                                <t t-elif="((line.price_with_tax / line.price_without_tax - 1 )*100).toFixed(0) == '8'">
                                    IEPS 8%
                                </t>
                                <t t-else="">
                                    IVA 16%
                                </t>
                            </span>
                        </div>
                    </t>
                </t>
        </xpath>



    </t>


</templates>